<p id="notice"><%= notice %></p>

<h1>Listing Reports Tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports_tasks.each do |reports_task| %>
      <tr>
        <td><%= link_to 'Show', reports_task %></td>
        <td><%= link_to 'Edit', edit_reports_task_path(reports_task) %></td>
        <td><%= link_to 'Destroy', reports_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

